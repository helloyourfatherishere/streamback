    <style>
        *{
            margin: 0;
            padding:0;
            box-sizing: border-box;
        }
        .cards{
            border: 1px solid black;
            height: auto;
            display: flex;
            flex-wrap: wrap;
        }
        .card{
            width:170px;
            height: 180px;
            border: 1px solid grey;
            display: inline-block;
            margin: 3px 10px;
        }
        .card>img{
            border: 1px solid red;
            width: 170px;
            height: 120px;
            display: block;
            margin-bottom: 8px;
        }
        ..card>p{
            display: block;
        }
        .nav{
          border: 1px solid red;
          width: 200px;
        }
        .nav>ul>li{
          font-size: 25px;
        } 
        .sub_ul>a{
          cursor: pointer;
        }
        .nav_ul>li:hover .sub_ul{
          color: red;
        }
        .sub_ul>a>li{
          font-size: 25px;
          margin-left: 25px;
        }
        .navLinks{
          background-color: lightgray;
        }
        .navLinks>a{
          color: black;
          margin:2px 3px;
          text-decoration: none;
          transition: background-color .4s ease-in;
        }
        .navLinks>a:hover{
          background-color: gray;
          color: white;
        }
    </style>
</head>
